<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/nnr"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/createacc"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:text="Create an account"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="7dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/uname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonstylepink"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter your name"
        android:textColor="#808080"
        android:gravity="center"
        tools:layout_editor_absoluteY="35dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/nick"
        android:layout_width="365dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonstylepink"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Nickname"
        android:textColor="#808080"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/uname"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/uname"
        android:background="@drawable/buttonstylepink"
        android:ems="10"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textColor="#808080"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="185dp" />

    <EditText
    android:id="@+id/phone"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
        android:background="@drawable/buttonstylepink"
    android:ems="10"
    android:inputType="numberSigned"
    android:text="Phone number"
    android:textColor="#808080"
    android:gravity="center"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstylepink"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="Password(6+characters)"
        android:textColor="#808080"
        android:gravity="center"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:background="#405ee4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/terms"
        android:layout_width="192dp"
        android:layout_height="69dp"
        android:text="By clicking create account you agree to our Terms and conditions"
        android:textColor="#fff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/signup"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.296" />

    <TextView
        android:id="@+id/signwith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with"
        tools:layout_editor_absoluteY="471dp"
        android:textColor="#ffff"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/goo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search"
        tools:layout_editor_absoluteY="517dp"
        tools:layout_editor_absoluteX="51dp" />

    <ImageButton
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/face"
        tools:layout_editor_absoluteY="517dp"
        tools:layout_editor_absoluteX="329dp" />

    <ImageButton
        android:id="@+id/linked"
        android:layout_width="51dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/link"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/signwith"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>